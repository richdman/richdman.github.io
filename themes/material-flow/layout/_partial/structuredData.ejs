<!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
<script type="application/ld+json">
    {
      "@context" : "http://schema.org",
      "@type" : "Article",
      "name" : "<%= post.title %>",
      "headline" : "<%= post.title %>",      
      "author" : {
        "@type" : "Person",
        "name" : "<%= post.author %>",
        "sameAs": ["https://www.linkedin.com/in/richardsitecore/"]
      },
      "datePublished" : "<%= post.date %>",
      "dateModified" : "<%= post.date %>",
      "image" : "<%= config.url + post.image %>",
      "url" : "<%= page.permalink %>",
      "publisher" : {
        "@type": "Organization",
          "name":"Sitecoresource.com",
          "url":"<%= config.url %>",
          "logo":{
                "@type":"ImageObject",
                 "url":"<%= config.url %>/images/logo.jpg",
                 "contentUrl":"<%= config.url %>/images/logo.jpg",
                 "width":"327",
                 "height":"196"
                  }
      }
    }
    </script>